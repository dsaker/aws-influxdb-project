# ==================================================================================== #
# VARIABLES
# ==================================================================================== #

instance_dns = "ec2-174-129-96-63.compute-1.amazonaws.com"
key_pair_file = "/Users/dustysaker/influxdbkey/influxdb.pem"
# ==================================================================================== #
# HELPERS
# ==================================================================================== #

## help: print this help message
help:
	@echo 'Usage:'
	@sed -n 's/^##//p' ${MAKEFILE_LIST} | column -t -s ':' |  sed -e 's/^/ /'

# ==================================================================================== #
# SETUP
# ==================================================================================== #

## copyfiles: copy all files to your raspberry pi
copyfiles:
	rsync -rP . ${username}@${raspberrypi_hostname}:~

# ==================================================================================== #
# MAINTENANCE
# ==================================================================================== #

## connect: ssh into your raspberry pi
connect:
	ssh -i ${key_pair_file}  ubuntu@${instance_dns}


